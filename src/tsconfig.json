{
  "compilerOptions": {
    "experimentalDecorators": true,
    "baseUrl": ".",
    "sourceMap": false,
    "target": "es5",
    "module": "commonjs",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": false,
    "noUnusedLocals": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "noImplicitThis": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "react",
    "lib": ["esnext", "dom.iterable", "dom"],
    "types": ["jest", "express", "node"],
    "rootDir": ".",
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", // 排除node_modules目录
    "**/*.spec.ts"
  ]
}
